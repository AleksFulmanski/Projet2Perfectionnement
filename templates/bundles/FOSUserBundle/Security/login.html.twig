{% extends "@FOSUser/layout.html.twig" %}


{% block css %}
{{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/signin.css') }}">
{% endblock %}


{% block fos_user_content %}

    {% trans_default_domain 'FOSUserBundle' %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

<body class="text-center">

    <form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        <h1 class="h3 mb-3 font-weight-normal">Connectez-vous</h1>

        <label for="username">{{ 'security.login.username'|trans }}</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" class="form-control" placeholder="Nom d'utilisateur"/>

        <label for="password" class="sr-only">{{ 'security.login.password'|trans }}</label>
        <input type="password" id="password" name="_password" required="required" autocomplete="current-password" class="form-control" placeholder="Mot de passe" />
        <div class="checkbox mb-3">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        </div>

        <input class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
    </form>

</body>


{% endblock fos_user_content %}



